version: '3'
services:
  db:
    image: mysql:latest
    container_name: mysql_project
    environment:
      MYSQL_DATABASE: projectDB
      MYSQL_ROOT_PASSWORD: root
    ports:
      - 3306:3306
    volumes:
      - db:/var/lib/mysql
    networks:
      tli-network:
        ipv4_address: 172.16.3.203
        
  naming-server:
    image: naming-server:latest
    container_name: naming-server
    ports:
      - 8761:8761
    networks:
      tli-network:
        ipv4_address: 172.16.3.201
        
  gateway:
    image: gateway:latest
    container_name: gateway
    ports:
      - 80
    networks:
      tli-network:
        ipv4_address: 172.16.3.202
    environment:
      EUREKA_SERVER_URL: http://172.16.3.201:8761/eureka
      porta: 80      
    depends_on:
      - naming-server
      
  tika:
    image: tika:latest
    container_name: tika_1
    ports:
      - 8800
    networks:
      tli-network:
    environment:
      EUREKA_SERVER_URL: http://172.16.3.201:8761/eureka
      porta: 8800
    depends_on:
      - naming-server
      - gateway
      
      
  cliente_manager:
    image: cliente-manager:latest
    container_name: cliente-manager
    ports:
      - 8020
    networks:
      tli-network:
    environment:
      EUREKA_SERVER_URL: http://172.16.3.201:8761/eureka
      porta: 8020
      SPRING_DATASOURCE_URL: jdbc:mysql:/172.16.3.203/:3306/projectDB
    depends_on:
      - naming-server
      - gateway
      - db
      
  task_manager:
    image: task-manager:latest
    container_name: task-manager
    ports:
      - 8030
    networks:
      tli-network:
    environment:
      EUREKA_SERVER_URL: http://172.16.3.201:8761/eureka
      porta: 8030
      SPRING_DATASOURCE_URL: jdbc:mysql:/172.16.3.203/:3306/projectDB
    depends_on:
      - naming-server
      - gateway
      - db
      - tika
      
  tli:
    image: tli:latest
    container_name: tli
    ports:
      - 8010
    networks:
      tli-network:
    environment:
      EUREKA_SERVER_URL: http://172.16.3.201:8761/eureka
      porta: 8010
    depends_on:
      - naming-server
      - gateway
      - db
      - cliente_manager
      - task_manager
      
volumes:
  db: null
networks:
  tli-network:
    ipam:
      config:
        - subnet: 172.16.3.0/24
          gateway: 172.16.3.254